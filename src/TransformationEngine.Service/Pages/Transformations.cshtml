@page
@model TransformationEngine.Pages.TransformationsModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Data Transformations";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-4">
                <i class="bi bi-arrow-left-right"></i> Data Transformations
            </h1>
            <p class="lead">Transform and standardize entity data with custom rules</p>
        </div>
    </div>

    <!-- Entity Type Selection -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Select Entity Type</h5>
                    <select id="entityTypeSelect" class="form-select" onchange="loadTransformationData()">
                        <option value="">-- Select an Entity Type --</option>
                        <option value="1" data-type-key="User">User</option>
                        <option value="2" data-type-key="Application">Application</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- Transformation Rules Section -->
    <div id="rulesSection" class="row mb-4" style="display: none;">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Transformation Rules</h5>
                    <button class="btn btn-primary btn-sm" onclick="showCreateRuleModal()">
                        <i class="bi bi-plus-circle"></i> Add Rule
                    </button>
                </div>
                <div class="card-body">
                    <div id="rulesTable" class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Priority</th>
                                    <th>Rule Name</th>
                                    <th>Field</th>
                                    <th>Type</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody id="rulesTableBody">
                                <!-- Rules will be loaded here -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Transformation Preview Section -->
    <div id="previewSection" class="row mb-4" style="display: none;">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Transformation Preview (Dry Run)</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-outline-primary" onclick="runDryRun('bulk')">
                            <i class="bi bi-layers"></i> Preview All Entities
                        </button>
                    </div>
                </div>
                <div id="previewResults" style="display: none;">
                    <div class="alert alert-info">
                        <strong>Dry Run Results:</strong> <span id="previewSummary"></span>
                    </div>
                    <div id="previewDetails" class="accordion">
                        <!-- Preview details will be loaded here -->
                    </div>
                    <div class="mt-3">
                        <button class="btn btn-success" onclick="executeTransformation()">
                            <i class="bi bi-check-circle"></i> Apply Transformations
                        </button>
                        <button class="btn btn-secondary" onclick="clearPreview()">
                            <i class="bi bi-x-circle"></i> Cancel
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create/Edit Rule Modal -->
<div class="modal fade" id="ruleModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ruleModalTitle">Create Transformation Rule</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="ruleForm">
                    <input type="hidden" id="ruleId" name="id" value="0">
                    <input type="hidden" id="ruleInventoryTypeId" name="inventoryTypeId">
                    
                    <div class="mb-3">
                        <label for="ruleName" class="form-label">Rule Name</label>
                        <input type="text" class="form-control" id="ruleName" name="ruleName" required>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="fieldName" class="form-label">Field Name</label>
                            <input type="text" class="form-control" id="fieldName" name="fieldName" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="ruleType" class="form-label">Rule Type</label>
                            <select class="form-select" id="ruleType" name="ruleType" required onchange="toggleRuleTypeFields()">
                                <option value="Replace">Replace</option>
                                <option value="RegexReplace">Regex Replace</option>
                                <option value="Format">Format</option>
                                <option value="Lookup">Lookup</option>
                                <option value="Custom">Custom Script (JavaScript)</option>
                            </select>
                        </div>
                    </div>
                    
                    <div id="patternFields">
                        <div class="mb-3">
                            <label for="sourcePattern" class="form-label">Source Pattern</label>
                            <input type="text" class="form-control" id="sourcePattern" name="sourcePattern">
                            <small class="form-text text-muted">For Replace/Regex: text to find</small>
                        </div>
                        
                        <div class="mb-3">
                            <label for="targetPattern" class="form-label">Target Pattern</label>
                            <input type="text" class="form-control" id="targetPattern" name="targetPattern">
                            <small class="form-text text-muted">For Replace/Regex: replacement text. For Format: format string</small>
                        </div>
                    </div>
                    
                    <div id="lookupField" style="display: none;">
                        <div class="mb-3">
                            <label for="lookupTableJson" class="form-label">Lookup Table (JSON)</label>
                            <textarea class="form-control" id="lookupTableJson" name="lookupTableJson" rows="5"></textarea>
                            <small class="form-text text-muted">Example: {"old1":"new1", "old2":"new2"}</small>
                        </div>
                    </div>
                    
                    <div id="customScriptField" style="display: none;">
                        <div class="mb-3">
                            <label for="customScript" class="form-label">JavaScript Code</label>
                            <textarea class="form-control font-monospace" id="customScript" name="customScript" rows="12" spellcheck="false"></textarea>
                            <div class="mt-2">
                                <details>
                                    <summary class="text-primary" style="cursor: pointer;"><small><i class="bi bi-info-circle"></i> Script Context & Examples</small></summary>
                                    <div class="alert alert-info mt-2">
                                        <strong>Available Objects:</strong>
                                        <ul class="mb-2">
                                            <li><code>data</code> - Input data object</li>
                                            <li><code>input</code> - Alias for data</li>
                                        </ul>
                                        <strong>How it works:</strong>
                                        <ul class="mb-2">
                                            <li>Return a transformed object</li>
                                            <li>Field value transformation: return new value</li>
                                        </ul>
                                        <strong>Example 1: Normalize email</strong>
                                        <pre class="bg-light p-2 rounded"><code>return data.email?.toLowerCase();</code></pre>
                                        <strong>Example 2: Format phone</strong>
                                        <pre class="bg-light p-2 rounded"><code>return data.phone?.replace(/[-\\s]/g, '');</code></pre>
                                        <strong>Example 3: Lookup department code</strong>
                                        <pre class="bg-light p-2 rounded"><code>const deptMap = {
  'Engineering': 'ENG',
  'Sales': 'SLS',
  'Marketing': 'MKT'
};
return deptMap[data.department] || 'OTHER';</code></pre>
                                    </div>
                                </details>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="priority" class="form-label">Priority</label>
                            <input type="number" class="form-control" id="priority" name="priority" value="100" required>
                            <small class="form-text text-muted">Lower numbers execute first</small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="isActive" class="form-label">Status</label>
                            <select class="form-select" id="isActive" name="isActive">
                                <option value="true">Active</option>
                                <option value="false">Inactive</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="saveRule()">Save Rule</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
<script>
    let currentEntityTypeId = null;
    let currentRules = [];
    let lastDryRunResult = null;

    async function loadTransformationData() {
        const select = document.getElementById('entityTypeSelect');
        currentEntityTypeId = select.value;
        
        if (!currentEntityTypeId) {
            document.getElementById('rulesSection').style.display = 'none';
            document.getElementById('previewSection').style.display = 'none';
            return;
        }

        // Show sections
        document.getElementById('rulesSection').style.display = 'block';
        document.getElementById('previewSection').style.display = 'block';

        // Load rules
        await loadRules();
    }

    async function loadRules() {
        try {
            const response = await fetch(`/api/transformation-rules?inventoryTypeId=${currentEntityTypeId}`);
            currentRules = await response.json();
            
            const tbody = document.getElementById('rulesTableBody');
            tbody.innerHTML = '';
            
            if (currentRules.length === 0) {
                tbody.innerHTML = '<tr><td colspan="6" class="text-center text-muted">No transformation rules defined. Click "Add Rule" to create one.</td></tr>';
            } else {
                currentRules.forEach(rule => {
                    const row = `
                        <tr>
                            <td>${rule.priority}</td>
                            <td>${rule.ruleName}</td>
                            <td><code>${rule.fieldName}</code></td>
                            <td><span class="badge bg-info">${rule.ruleType}</span></td>
                            <td>
                                <span class="badge ${rule.isActive ? 'bg-success' : 'bg-secondary'}">${rule.isActive ? 'Active' : 'Inactive'}</span>
                            </td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary" onclick="editRule(${rule.id})">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-danger" onclick="deleteRule(${rule.id})">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    `;
                    tbody.innerHTML += row;
                });
            }
        } catch (error) {
            console.error('Error loading rules:', error);
            alert('Error loading transformation rules');
        }
    }

    function showCreateRuleModal() {
        document.getElementById('ruleModalTitle').textContent = 'Create Transformation Rule';
        document.getElementById('ruleForm').reset();
        document.getElementById('ruleId').value = '0';
        document.getElementById('ruleInventoryTypeId').value = currentEntityTypeId;
        toggleRuleTypeFields();
        new bootstrap.Modal(document.getElementById('ruleModal')).show();
    }

    function toggleRuleTypeFields() {
        const ruleType = document.getElementById('ruleType').value.toLowerCase();
        const patternFields = document.getElementById('patternFields');
        const lookupField = document.getElementById('lookupField');
        const customScriptField = document.getElementById('customScriptField');
        
        // Hide all optional fields first
        patternFields.style.display = 'none';
        lookupField.style.display = 'none';
        customScriptField.style.display = 'none';
        
        if (ruleType === 'custom') {
            customScriptField.style.display = 'block';
        } else if (ruleType === 'lookup') {
            lookupField.style.display = 'block';
        } else {
            patternFields.style.display = 'block';
        }
    }

    async function saveRule() {
        const form = document.getElementById('ruleForm');
        const formData = new FormData(form);
        
        const rule = {
            id: parseInt(formData.get('id')) || 0,
            inventoryTypeId: parseInt(currentEntityTypeId),
            ruleName: formData.get('ruleName'),
            fieldName: formData.get('fieldName'),
            ruleType: formData.get('ruleType'),
            sourcePattern: formData.get('sourcePattern') || null,
            targetPattern: formData.get('targetPattern') || null,
            lookupTableJson: formData.get('lookupTableJson') || null,
            customScript: formData.get('customScript') || null,
            scriptLanguage: formData.get('ruleType') === 'Custom' ? 'JavaScript' : null,
            priority: parseInt(formData.get('priority')),
            isActive: formData.get('isActive') === 'true',
            createdDate: new Date().toISOString()
        };

        try {
            const url = rule.id === 0 ? '/api/transformation-rules' : `/api/transformation-rules/${rule.id}`;
            const method = rule.id === 0 ? 'POST' : 'PUT';
            
            const response = await fetch(url, {
                method: method,
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(rule)
            });

            if (response.ok) {
                bootstrap.Modal.getInstance(document.getElementById('ruleModal')).hide();
                await loadRules();
            } else {
                const errorText = await response.text();
                alert('Error saving rule: ' + errorText);
            }
        } catch (error) {
            console.error('Error saving rule:', error);
            alert('Error saving rule: ' + error.message);
        }
    }

    async function editRule(ruleId) {
        const rule = currentRules.find(r => r.id === ruleId);
        if (!rule) return;

        document.getElementById('ruleModalTitle').textContent = 'Edit Transformation Rule';
        document.getElementById('ruleId').value = rule.id;
        document.getElementById('ruleInventoryTypeId').value = rule.inventoryTypeId;
        document.getElementById('ruleName').value = rule.ruleName;
        document.getElementById('fieldName').value = rule.fieldName;
        document.getElementById('ruleType').value = rule.ruleType;
        document.getElementById('sourcePattern').value = rule.sourcePattern || '';
        document.getElementById('targetPattern').value = rule.targetPattern || '';
        document.getElementById('lookupTableJson').value = rule.lookupTableJson || '';
        document.getElementById('customScript').value = rule.customScript || '';
        document.getElementById('priority').value = rule.priority;
        document.getElementById('isActive').value = rule.isActive.toString();
        
        toggleRuleTypeFields();
        new bootstrap.Modal(document.getElementById('ruleModal')).show();
    }

    async function deleteRule(ruleId) {
        if (!confirm('Are you sure you want to delete this rule?')) return;

        try {
            const response = await fetch(`/api/transformation-rules/${ruleId}`, { method: 'DELETE' });
            if (response.ok) {
                await loadRules();
            } else {
                alert('Error deleting rule');
            }
        } catch (error) {
            console.error('Error deleting rule:', error);
            alert('Error deleting rule');
        }
    }

    async function runDryRun(mode) {
        alert('Transformation preview functionality will be implemented after raw data ingestion is complete.');
    }

    function displayPreviewResults(result) {
        // TODO: Implement preview display
    }

    async function executeTransformation() {
        alert('Transformation execution will be implemented after raw data ingestion is complete.');
    }

    function clearPreview() {
        document.getElementById('previewResults').style.display = 'none';
        lastDryRunResult = null;
    }
</script>
}
