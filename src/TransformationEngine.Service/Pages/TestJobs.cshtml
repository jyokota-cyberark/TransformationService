@page
@model TransformationEngine.Pages.TestJobsModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Spark Integration Tests";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-4">
                <i class="bi bi-lightning-charge"></i> Spark Integration Tests
            </h1>
            <p class="lead">Monitor and debug end-to-end Spark job integration</p>
        </div>
    </div>

    <!-- Test Control Section -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card border-primary">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-play-circle"></i> Test Job Control
                    </h5>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        Run a test spark job to verify end-to-end integration is working correctly.
                        This will submit a job to your Spark cluster with test data.
                    </p>
                    <button id="runTestBtn" class="btn btn-primary btn-lg w-100" onclick="runTestJob()" style="display: block;">
                        <i class="bi bi-play-fill"></i> Run Test Job
                    </button>
                    <div id="testRunning" style="display: none;" class="mt-3">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-2 text-muted">Running test job...</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Test Status Card -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle"></i> Service Status
                    </h5>
                </div>
                <div class="card-body">
                    <div id="healthStatus">
                        <p class="text-muted">Checking service health...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Last Test Result Section -->
    <div id="lastResultSection" class="row mb-4" style="display: none;">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-clock-history"></i> Last Test Result
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-sm">
                                <tr>
                                    <th>Test ID:</th>
                                    <td id="lastTestId"></td>
                                </tr>
                                <tr>
                                    <th>Status:</th>
                                    <td id="lastStatus"></td>
                                </tr>
                                <tr>
                                    <th>Execution Time:</th>
                                    <td id="lastExecutionTime"></td>
                                </tr>
                                <tr>
                                    <th>Started:</th>
                                    <td id="lastStartedAt"></td>
                                </tr>
                                <tr>
                                    <th>Completed:</th>
                                    <td id="lastCompletedAt"></td>
                                </tr>
                                <tr>
                                    <th>Execution Mode:</th>
                                    <td id="lastExecutionMode"></td>
                                </tr>
                                <tr>
                                    <th>Job ID:</th>
                                    <td id="lastJobId"></td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <div id="lastMessage" class="alert"></div>
                        </div>
                    </div>

                    <!-- Input/Output Data Section -->
                    <ul class="nav nav-tabs mt-4" id="testDataTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="inputTab" data-bs-toggle="tab" data-bs-target="#inputPane" type="button">Input Data</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="outputTab" data-bs-toggle="tab" data-bs-target="#outputPane" type="button">Output Data</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="diagnosticsTab" data-bs-toggle="tab" data-bs-target="#diagnosticsPane" type="button">Diagnostics</button>
                        </li>
                    </ul>
                    <div class="tab-content" id="testDataContent">
                        <div class="tab-pane fade show active" id="inputPane" role="tabpanel">
                            <pre id="inputData" class="bg-light p-3 rounded mt-2" style="overflow-x: auto; max-height: 400px;"></pre>
                        </div>
                        <div class="tab-pane fade" id="outputPane" role="tabpanel">
                            <pre id="outputData" class="bg-light p-3 rounded mt-2" style="overflow-x: auto; max-height: 400px;"></pre>
                        </div>
                        <div class="tab-pane fade" id="diagnosticsPane" role="tabpanel">
                            <pre id="diagnosticsData" class="bg-light p-3 rounded mt-2" style="overflow-x: auto; max-height: 400px;"></pre>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Test History Section -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-list-ul"></i> Test History
                    </h5>
                    <button class="btn btn-sm btn-outline-secondary" onclick="loadTestHistory()">
                        <i class="bi bi-arrow-clockwise"></i> Refresh
                    </button>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Test ID</th>
                                    <th>Transformation Job ID</th>
                                    <th>Status</th>
                                    <th>Execution Mode</th>
                                    <th>Duration (ms)</th>
                                    <th>Started</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody id="historyTableBody">
                                <tr>
                                    <td colspan="7" class="text-center text-muted">
                                        <i class="bi bi-inbox"></i> No test jobs yet. Run a test to see history.
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
<script>
    // Check health on page load
    document.addEventListener('DOMContentLoaded', function() {
        checkServiceHealth();
        loadTestHistory();
    });

    async function checkServiceHealth() {
        try {
            const response = await fetch('/api/test-jobs/health');
            const data = await response.json();
            const healthDiv = document.getElementById('healthStatus');
            
            if (response.ok) {
                healthDiv.innerHTML = `
                    <div class="alert alert-success">
                        <strong><i class="bi bi-check-circle"></i> Service Healthy</strong>
                        <p class="mb-0 mt-2">${data.message}</p>
                        <small class="text-muted">Last checked: ${new Date(data.timestamp).toLocaleTimeString()}</small>
                    </div>
                `;
            } else {
                healthDiv.innerHTML = `<div class="alert alert-danger">Service unavailable</div>`;
            }
        } catch (error) {
            document.getElementById('healthStatus').innerHTML = `
                <div class="alert alert-danger">
                    <strong>Error:</strong> Cannot reach service
                </div>
            `;
        }
    }

    async function runTestJob() {
        const runBtn = document.getElementById('runTestBtn');
        const testRunning = document.getElementById('testRunning');
        
        runBtn.style.display = 'none';
        testRunning.style.display = 'block';
        
        try {
            const response = await fetch('/api/test-jobs/run', { method: 'POST' });
            
            if (!response.ok) {
                throw new Error(`HTTP error! status: ${response.status}`);
            }
            
            const result = await response.json();
            displayTestResult(result);
            await loadTestHistory();
        } catch (error) {
            console.error('Error running test job:', error);
            alert('Error running test job: ' + error.message);
        } finally {
            runBtn.style.display = 'block';
            testRunning.style.display = 'none';
        }
    }

    function displayTestResult(result) {
        const lastResultSection = document.getElementById('lastResultSection');
        lastResultSection.style.display = 'block';
        
        // Populate result details
        document.getElementById('lastTestId').textContent = result.testJobId;
        document.getElementById('lastStatus').innerHTML = `<span class="badge ${result.isSuccessful ? 'bg-success' : 'bg-danger'}">${result.status}</span>`;
        document.getElementById('lastExecutionTime').textContent = result.executionTimeMs + ' ms';
        document.getElementById('lastStartedAt').textContent = new Date(result.startedAt).toLocaleString();
        document.getElementById('lastCompletedAt').textContent = result.completedAt ? new Date(result.completedAt).toLocaleString() : 'N/A';
        document.getElementById('lastExecutionMode').textContent = result.executionMode;
        document.getElementById('lastJobId').textContent = result.transformationJobId || 'Not yet assigned';
        
        // Set message alert color
        const messageDiv = document.getElementById('lastMessage');
        if (result.isSuccessful) {
            messageDiv.className = 'alert alert-success';
        } else {
            messageDiv.className = 'alert alert-danger';
        }
        messageDiv.innerHTML = `<strong>${result.status}:</strong> ${result.message || 'Test completed'}`;
        
        // Display data
        if (result.inputData) {
            try {
                const inputJson = JSON.parse(result.inputData);
                document.getElementById('inputData').textContent = JSON.stringify(inputJson, null, 2);
            } catch (e) {
                document.getElementById('inputData').textContent = result.inputData;
            }
        }
        
        if (result.outputData) {
            try {
                const outputJson = JSON.parse(result.outputData);
                document.getElementById('outputData').textContent = JSON.stringify(outputJson, null, 2);
            } catch (e) {
                document.getElementById('outputData').textContent = result.outputData;
            }
        } else {
            document.getElementById('outputData').textContent = 'No output yet';
        }
        
        if (result.diagnostics) {
            document.getElementById('diagnosticsData').textContent = JSON.stringify(result.diagnostics, null, 2);
        }
        
        if (result.errorDetails) {
            messageDiv.innerHTML += `<div class="mt-3"><strong>Error Details:</strong><pre class="bg-danger bg-opacity-10 p-2 rounded mt-2">${escapeHtml(result.errorDetails)}</pre></div>`;
        }
    }

    async function loadTestHistory() {
        try {
            const response = await fetch('/api/test-jobs/history?limit=10');
            if (!response.ok) throw new Error('Failed to load history');
            
            const history = await response.json();
            const tbody = document.getElementById('historyTableBody');
            
            if (history.length === 0) {
                tbody.innerHTML = `
                    <tr>
                        <td colspan="7" class="text-center text-muted">
                            <i class="bi bi-inbox"></i> No test jobs yet. Run a test to see history.
                        </td>
                    </tr>
                `;
            } else {
                tbody.innerHTML = history.map(test => `
                    <tr>
                        <td><code>${test.testJobId.substring(0, 12)}...</code></td>
                        <td><code>${test.transformationJobId ? test.transformationJobId.substring(0, 12) + '...' : 'N/A'}</code></td>
                        <td><span class="badge ${test.isSuccessful ? 'bg-success' : 'bg-danger'}">${test.status}</span></td>
                        <td>${test.executionMode}</td>
                        <td>${test.executionTimeMs} ms</td>
                        <td>${new Date(test.startedAt).toLocaleString()}</td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary" onclick="viewTestDetails('${test.testJobId}')">
                                <i class="bi bi-eye"></i> View
                            </button>
                        </td>
                    </tr>
                `).join('');
            }
        } catch (error) {
            console.error('Error loading history:', error);
        }
    }

    function viewTestDetails(testJobId) {
        // Scroll to last result and highlight it
        document.getElementById('lastResultSection').scrollIntoView({ behavior: 'smooth' });
    }

    function escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }
</script>
}
